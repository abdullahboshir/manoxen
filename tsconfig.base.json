{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/frontend/src/*"],
      
      // Monorepo Packages & Libs
      "@manoxen/iam-core": ["./packages/iam-core/src/index"],
      "@manoxen/core-util": ["./libs/core-util/src/index"],
      "@manoxen/shared-types": ["./packages/shared-types/src/index"],
      "@manoxen/platform-core": ["./packages/platform-core/src/index"],
      "@manoxen/infra-common": ["./libs/infra-common/src/index"],
      "@manoxen/tenant-strategy": ["./packages/tenant-strategy/src/index"],
      "@manoxen/*": [
        "./packages/*/src",
        "./apps/*/src",
        "./libs/*/src"
      ],

      // Standard Short Aliases (Proposed Fix)
      "#app/*": ["./apps/backend/src/app/*"],
      "#contexts/*": ["./apps/backend/src/contexts/*"],
      "#shared/*": ["./apps/backend/src/shared/*"],
      "#contracts/*": ["./apps/backend/src/contracts/*"],

      // Domain Context Aliases (Legacy Support & Explicit Mapping)
      // These map @manoxen/context -> apps/backend/src/contexts/context/src/index
      "@manoxen/catalog": ["apps/backend/src/contexts/catalog/src/index"],
      "@manoxen/catalog/*": ["apps/backend/src/contexts/catalog/src/*"],
      "@manoxen/sales": ["apps/backend/src/contexts/sales/src/index"],
      "@manoxen/sales/*": ["apps/backend/src/contexts/sales/src/*"],
      "@manoxen/pos": ["apps/backend/src/contexts/pos/src/index"],
      "@manoxen/pos/*": ["apps/backend/src/contexts/pos/src/*"],
      "@manoxen/pricing": ["apps/backend/src/contexts/pricing/src/index"],
      "@manoxen/pricing/*": ["apps/backend/src/contexts/pricing/src/*"],
      "@manoxen/accounting": ["apps/backend/src/contexts/accounting/src/index"],
      "@manoxen/accounting/*": ["apps/backend/src/contexts/accounting/src/*"],
      "@manoxen/finance": ["apps/backend/src/contexts/accounting/src/index"],
      "@manoxen/finance/*": ["apps/backend/src/contexts/accounting/src/*"],
      "@manoxen/supply": ["apps/backend/src/contexts/supply/src/index"],
      "@manoxen/supply/*": ["apps/backend/src/contexts/supply/src/*"],
      "@manoxen/ops": ["apps/backend/src/contexts/ops/src/index"],
      "@manoxen/ops/*": ["apps/backend/src/contexts/ops/src/*"],
      "@manoxen/analytics": ["apps/backend/src/contexts/analytics/src/index"],
      "@manoxen/analytics/*": ["apps/backend/src/contexts/analytics/src/*"],
      "@manoxen/hrm": ["apps/backend/src/contexts/hrm/src/index"],
      "@manoxen/hrm/*": ["apps/backend/src/contexts/hrm/src/*"],
      "@manoxen/governance": ["apps/backend/src/contexts/governance/src/index"],
      "@manoxen/governance/*": ["apps/backend/src/contexts/governance/src/*"],
      "@manoxen/legal": ["apps/backend/src/contexts/legal/src/index"],
      "@manoxen/legal/*": ["apps/backend/src/contexts/legal/src/*"],
      "@manoxen/corporate": ["apps/backend/src/contexts/corporate/src/index"],
      "@manoxen/corporate/*": ["apps/backend/src/contexts/corporate/src/*"],
      "@manoxen/logistics": ["apps/backend/src/contexts/logistics/src/index"],
      "@manoxen/logistics/*": ["apps/backend/src/contexts/logistics/src/*"],
      "@manoxen/crm": ["apps/backend/src/contexts/crm/src/index"],
      "@manoxen/crm/*": ["apps/backend/src/contexts/crm/src/*"],
      "@manoxen/organization": ["apps/backend/src/contexts/organization/src/index"],
      "@manoxen/organization/*": ["apps/backend/src/contexts/organization/src/*"],
      "@manoxen/identity": ["apps/backend/src/contexts/identity/src/index"],
      "@manoxen/identity/*": ["apps/backend/src/contexts/identity/src/*"],
      "@manoxen/iam": ["apps/backend/src/contexts/identity/src/index"],
      "@manoxen/iam/*": ["apps/backend/src/contexts/identity/src/*"],
      "@manoxen/system": ["apps/backend/src/contexts/system/src/index"],
      "@manoxen/system/*": ["apps/backend/src/contexts/system/src/*"],
      "@manoxen/marketing": ["apps/backend/src/contexts/marketing/src/index"],
      "@manoxen/marketing/*": ["apps/backend/src/contexts/marketing/src/*"],
      "@manoxen/automation": ["apps/backend/src/contexts/automation/src/index"],
      "@manoxen/automation/*": ["apps/backend/src/contexts/automation/src/*"],
      "@manoxen/contacts": ["apps/backend/src/contexts/contacts/src/index"],
      "@manoxen/contacts/*": ["apps/backend/src/contexts/contacts/src/*"],
      
      // Domain #domain aliases (Supporting existing usage)
      "#domain/catalog": ["apps/backend/src/contexts/catalog/src/index"],
      "#domain/catalog/*": ["apps/backend/src/contexts/catalog/src/*"],
      "#domain/sales": ["apps/backend/src/contexts/sales/src/index"],
      "#domain/sales/*": ["apps/backend/src/contexts/sales/src/*"],
      "#domain/pos": ["apps/backend/src/contexts/pos/src/index"],
      "#domain/pos/*": ["apps/backend/src/contexts/pos/src/*"],
      "#domain/accounting": ["apps/backend/src/contexts/accounting/src/index"],
      "#domain/accounting/*": ["apps/backend/src/contexts/accounting/src/*"],
      "#domain/finance": ["apps/backend/src/contexts/accounting/src/index"],
      "#domain/finance/*": ["apps/backend/src/contexts/accounting/src/*"],
      "#domain/supply": ["apps/backend/src/contexts/supply/src/index"],
      "#domain/supply/*": ["apps/backend/src/contexts/supply/src/*"],
      "#domain/ops": ["apps/backend/src/contexts/ops/src/index"],
      "#domain/ops/*": ["apps/backend/src/contexts/ops/src/*"],
      "#domain/analytics": ["apps/backend/src/contexts/analytics/src/index"],
      "#domain/analytics/*": ["apps/backend/src/contexts/analytics/src/*"],
      "#domain/hrm": ["apps/backend/src/contexts/hrm/src/index"],
      "#domain/hrm/*": ["apps/backend/src/contexts/hrm/src/*"],
      "#domain/pricing": ["apps/backend/src/contexts/pricing/src/index"],
      "#domain/pricing/*": ["apps/backend/src/contexts/pricing/src/*"],
      "#domain/legal": ["apps/backend/src/contexts/legal/src/index"],
      "#domain/legal/*": ["apps/backend/src/contexts/legal/src/*"],
      "#domain/corporate": ["apps/backend/src/contexts/corporate/src/index"],
      "#domain/corporate/*": ["apps/backend/src/contexts/corporate/src/*"],
      "#domain/logistics": ["apps/backend/src/contexts/logistics/src/index"],
      "#domain/logistics/*": ["apps/backend/src/contexts/logistics/src/*"],
      "#domain/crm": ["apps/backend/src/contexts/crm/src/index"],
      "#domain/crm/*": ["apps/backend/src/contexts/crm/src/*"],
      "#domain/governance": ["apps/backend/src/contexts/governance/src/index"],
      "#domain/governance/*": ["apps/backend/src/contexts/governance/src/*"],
      "#domain/organization": ["apps/backend/src/contexts/organization/src/index"],
      "#domain/organization/*": ["apps/backend/src/contexts/organization/src/*"],
      "#domain/iam": ["apps/backend/src/contexts/identity/src/index"],
      "#domain/iam/*": ["apps/backend/src/contexts/identity/src/*"],
      "#domain/system": ["apps/backend/src/contexts/system/src/index"],
      "#domain/system/*": ["apps/backend/src/contexts/system/src/*"],
      
      "#contract": ["./apps/backend/src/contracts/index"],
      "#contract/*": ["./apps/backend/src/contracts/*"]
    }
  },
  "files": [],
  "references": [
    { "path": "./libs/core-util" },
    { "path": "./libs/infra-common" },
    { "path": "./packages/shared-types" },
    { "path": "./packages/iam-core" },
    { "path": "./packages/platform-core" },
    { "path": "./packages/tenant-strategy" }
  ],
  "exclude": ["node_modules", "dist", "build"]
}