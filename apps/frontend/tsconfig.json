{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@manoxen/shared-types": [
        "../../packages/shared-types/src"
      ],
      "@manoxen/shared-types/*": [
        "../../packages/shared-types/src/*"
      ],
      "@manoxen/shared": [
        "../../packages/shared-types/src"
      ],
      "@manoxen/catalog": [
        "../backend/src/contexts/catalog/src"
      ],
      "@manoxen/catalog/*": [
        "../backend/src/contexts/catalog/src/*"
      ],
      "@manoxen/sales": [
        "../backend/src/contexts/sales/src"
      ],
      "@manoxen/sales/*": [
        "../backend/src/contexts/sales/src/*"
      ],
      "@manoxen/pos": [
        "../backend/src/contexts/pos/src"
      ],
      "@manoxen/pos/*": [
        "../backend/src/contexts/pos/src/*"
      ],
      "@manoxen/ops": ["../backend/src/contexts/ops/src"],
      "@manoxen/ops/*": ["../backend/src/contexts/ops/src/*"],
      "@manoxen/erp": [
        "../backend/src/contexts/ops/src"
      ],
      "@manoxen/erp/*": [
        "../backend/src/contexts/ops/src/*"
      ],
      "@manoxen/hrm": [
        "../backend/src/contexts/hrm/src"
      ],
      "@manoxen/hrm/*": [
        "../backend/src/contexts/hrm/src/*"
      ],
      "@manoxen/organization": [
        "../backend/src/contexts/organization/src"
      ],
      "@manoxen/organization/*": [
        "../backend/src/contexts/organization/src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types"
    ],
    "types": [
      "node",
      "react",
      "react-dom",
      "papaparse"
    ],
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "../../domains/**/*.ts",
    "../../domains/**/*.tsx"
  ],
  "references": [
    {
      "path": "../../packages/shared-types"
    }
  ],
  "exclude": [
    "node_modules"
  ]
}
