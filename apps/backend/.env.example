# ==============================================================================
#                    Manoxen - ALL-IN-ONE COMMERCE PLATFORM
#                   ERP | CRM | HRM | POS | E-Commerce | Logistics
# ==============================================================================

# ======================== CORE APPLICATION ========================
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# ======================== DATABASE ========================
DB_URL=mongodb+srv://<username>:<password>@cluster.mongodb.net/manoxen

# ======================== SECURITY ========================
# Encryption & Hashing
BCRYPT_SALT_ROUNDS=12
DEFAULT_PASS=
COOKIE_SECRET=

# Server Config
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:3001
MAX_UPLOAD_SIZE=50mb
TRUST_PROXY=true

# JWT Configuration
JWT_ACCESS_SECRET=
JWT_REFRESH_SECRET=
JWT_ACCESS_EXPIRED_IN=1d
JWT_REFRESH_EXPIRED_IN=30d

# Password Reset
RESET_PASS_UI_LINK=http://localhost:3000/auth/reset-password

# ======================== SUPER ADMIN ========================
SUPER_ADMIN_EMAIL=admin@manoxen.com
SUPER_ADMIN_PASS=
SYSTEM_USER_ID=

# ======================== FILE STORAGE ========================
# Options: local, cloudinary, s3
STORAGE_PROVIDER=local
CDN_URL=

# Cloudinary (if STORAGE_PROVIDER=cloudinary)
CLOUD_NAME=
CLOUD_API_KEY=
CLOUD_API_SECRET=

# AWS S3 (if STORAGE_PROVIDER=s3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=

# ======================== BACKUP & DATA RETENTION ========================
ENABLE_AUTO_BACKUP=false
BACKUP_S3_BUCKET=
BACKUP_SCHEDULE_CRON="0 0 * * *"
AUDIT_LOG_RETENTION_DAYS=90

# ======================== PERFORMANCE (Redis) ========================
REDIS_URL=redis://localhost:6379
WORKERS=2
ENABLE_QUEUE=true
CACHE_TTL_SECONDS=3600
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# ======================== MULTI-TENANCY ========================
MAX_DEDICATED_CONNECTIONS=50

# ======================== EMAIL (SMTP) ========================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
SMTP_FROM_NAME=

# ======================== MESSAGING ========================
# SMS Gateway
SMS_PROVIDER=
SMS_API_KEY=
SMS_SENDER_ID=

# WhatsApp Business API
WHATSAPP_API_KEY=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_BUSINESS_ACCOUNT_ID=

# Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Push Notifications (Firebase)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# ======================== PAYMENT GATEWAYS ========================
# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# bKash
BKASH_APP_KEY=
BKASH_APP_SECRET=
BKASH_USERNAME=
BKASH_PASSWORD=
BKASH_BASE_URL=

# Nagad
NAGAD_MERCHANT_ID=
NAGAD_MERCHANT_KEY=
NAGAD_BASE_URL=

# SSLCommerz
SSLCOMMERZ_STORE_ID=
SSLCOMMERZ_STORE_PASSWORD=
